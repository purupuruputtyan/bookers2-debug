<%= form_with model: contact, local: true do |f| %>
  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Contact %>
    <%= f.text_area :contact, class: "form-control" %>
  </div>
  <div class="form-group text-right">
    <%= f.submit '送信', class: "btn btn-success" %>
  </div>
<% end %>