<% book.book_comments.each do |comment| %>
  <table>
    <tr>
      <td>
        <%= image_tag comment.user.get_profile_image, size:'100x100' %><br>
        <%= link_to comment.user.name, user_path(comment.user_id) %>
      </td>
      <td><%= comment.comment %></td>
      <td>
        <% if comment.user == current_user %>
        <%= link_to "削除", book_book_comment_path(comment.book_id, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
        <% end %>
      </td>
    </tr>
  </table>
  <% end %>